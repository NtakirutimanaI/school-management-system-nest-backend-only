<!DOCTYPE html>
<html>

<head>
    <title>Reset Password</title>
    <style>
        body {
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #f4f7f6;
            margin: 0
        }

        .card {
            background: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, .1);
            width: 100%;
            max-width: 400px
        }

        input {
            width: 100%;
            padding: .8rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
            margin-bottom: 1rem
        }

        button {
            width: 100%;
            padding: 1rem;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer
        }

        .err,
        .ok {
            padding: .8rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            display: none
        }

        .err {
            color: #dc3545;
            background: #f8d7da
        }

        .ok {
            color: #155724;
            background: #d4edda
        }
    </style>
</head>

<body>
    <div class="card">
        <h2>Set Password</h2>
        <p>Enter new password below.</p>
        <div id="e" class="err"></div>
        <div id="s" class="ok"></div>
        <form id="f"><input type="hidden" id="t" value="{{token}}">
            <label>New Password</label><input type="password" id="p" required minlength="6">
            <label>Confirm</label><input type="password" id="c" required minlength="6">
            <button type="submit" id="b">Save Password</button>
        </form>
    </div>
    <script>
        const f = document.getElementById('f'), e = document.getElementById('e'), s = document.getElementById('s'), b = document.getElementById('b');
        f.onsubmit = async (x) => {
            x.preventDefault(); e.style.display = 'none'; const p = document.getElementById('p').value, c = document.getElementById('c').value, t = document.getElementById('t').value;
            if (p !== c) { e.innerText = 'Mismatch'; e.style.display = 'block'; return } b.disabled = true; b.innerText = 'Saving...';
            try {
                const r = await fetch('/api/auth/reset-password', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ token: t, password: p }) });
                if (r.ok) { s.innerText = 'Success!'; s.style.display = 'block'; f.style.display = 'none' } else { const d = await r.json(); e.innerText = d.message || 'Error'; e.style.display = 'block'; b.disabled = false; b.innerText = 'Save' }
            }
            catch (e) { e.innerText = 'Fail'; e.style.display = 'block'; b.disabled = false }
        };
    </script>
</body>

</html>